{
  "manifest_version": 3,
  "name": "Urdu Translator",
  "version": "1.0",
  "description": "Live translation of Urdu text on web pages.",
  
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Urdu Translator"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}